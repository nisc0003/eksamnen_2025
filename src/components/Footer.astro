<style>
  footer {
    display: grid;
    place-content: center;
    background-color: rgba(25, 25, 25, 1);
    padding: 5rem;
    color: white;
    width: 100%;
    background-color: var(--second-color);
    place-content: center;
  }

  .footer_grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-block: 4rem;
  }

  .footer_hyperlinks1 {
    display: flex;
    flex-direction: column;
    grid-column: 1;
  }

  .footer_hyperlinks2 {
    display: flex;
    flex-direction: column;
    grid-column: 2;
  }
  .footer_nyhedsbrev {
    display: grid;
    grid-column: 1 / span 2;
  }

  p,
  h5 {
    color: white;
    margin-left: 1rem;
    margin-bottom: 1rem;
  }

  input {
    border-radius: 50px;
    padding-left: 5px;
    width: 100%;
    height: 3rem;
  }

  ul {
    list-style-type: none;
  }

  a {
    text-decoration: none;
    padding-bottom: 2rem;
  }
  .footer_image {
    height: 100%;
    width: auto;
    display: grid;
    grid-row: 2;
    grid-column: 1 / span 2;
  }

  .footer_some {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    grid-row: 4;
    grid-column: 1 / span 3;
    gap: 50px;
    place-self: center;
  }

  @media (min-width: 800px) {
    footer {
      margin: 0px;
      padding: 0px;
    }

    ul {
      padding-bottom: 6rem;
    }
    .footer_grid {
      display: grid;
      grid-template-columns: 1fr 1fr auto;
      grid-template-rows: auto 1fr;
      gap: 4rem;
      place-self: center;
    }
    .footer_nyhedsbrev {
      display: grid;
      grid-column: 1 / span 2;
      grid-row: 1;
    }
    .footer_hyperlinks1 {
      display: flex;
      flex-direction: column;
      grid-row: 2;
      grid-column: 1;
      place-self: center;
    }
    .footer_hyperlinks2 {
      display: flex;
      flex-direction: column;
      grid-row: 2;
      grid-column: 2;
      place-self: center;
    }
    .footer_image {
      display: grid;
      grid-row: 1 / span 2;
      grid-column: 3;
      place-self: start;
    }

    .footer_some {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      grid-row: 3;
      grid-column: 1 / span 3;
      gap: 50px;
      place-self: center;
    }
  }
</style>
