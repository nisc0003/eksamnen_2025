---
//@ts-nocheck
const { items = [], isOpen = false } = Astro.props;

// Helper function to calculate total
const calculateTotal = (items) => {
  return items
    .reduce((sum, item) => {
      const price = parseFloat(item.price.replace(",", ".")) || 0;
      return sum + price * item.quantity;
    }, 0)
    .toFixed(2)
    .replace(".", ",");
};
---

<div class={`basket-overlay ${isOpen ? "open" : ""}`}>
  <div class="basket-container">
    <div class="basket-header">
      <h3>Your Basket</h3>
      <button class="close-basket" aria-label="Close basket">&times;</button>
    </div>

    <div class="basket-items">
      {
        items.length > 0 ? (
          items.map((item) => (
            <div class="basket-item" data-id={item.id}>
              <img
                src={`/beer-card_images/${item.img}`}
                alt={item.title}
                width="50"
                height="50"
                loading="lazy"
              />
              <div class="item-details">
                <h4>{item.title}</h4>
                <p>{item.price},- DKK</p>
                <div class="quantity-controls">
                  <button class="quantity-btn minus">-</button>
                  <span class="quantity">{item.quantity}</span>
                  <button class="quantity-btn plus">+</button>
                </div>
              </div>
            </div>
          ))
        ) : (
          <p class="empty-basket">Your basket is empty</p>
        )
      }
    </div>

    {
      items.length > 0 && (
        <div class="basket-footer">
          <div class="basket-total">
            <p>Total: {calculateTotal(items)} DKK</p>
          </div>
          <button class="checkout-btn">Proceed to Checkout</button>
        </div>
      )
    }
  </div>
</div>

<style>
  .basket-overlay {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: var(--font-color-white);
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
    transition: right 0.3s ease;
    z-index: 1000;
    overflow-y: auto;
  }

  .basket-overlay.open {
    right: 0;
  }

  .basket-overlay::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .basket-overlay.open::before {
    opacity: 1;
    pointer-events: auto;
  }

  .basket-container {
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .basket-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }

  .close-basket {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
  }

  .basket-items {
    flex-grow: 1;
    overflow-y: auto;
  }

  .basket-item {
    display: flex;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid #eee;
  }

  .item-details {
    flex-grow: 1;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .quantity-btn {
    width: 25px;
    height: 25px;
    border: 1px solid #ddd;
    background: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .empty-basket {
    text-align: center;
    margin-top: 2rem;
    color: #666;
  }

  .basket-footer {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }

  .basket-total {
    font-weight: bold;
    font-size: 1.2rem;
    margin-bottom: 1rem;
    text-align: right;
  }

  .checkout-btn {
    width: 100%;
    padding: 1rem;
    background: var(--second-color);
    color: white;
    border: none;
    cursor: pointer;
    font-weight: bold;
    transition: 0.2s;
  }

  .checkout-btn:hover {
    background: var(--second-color-dark);
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    // Close basket button
    document.querySelector(".close-basket")?.addEventListener("click", () => {
      document.querySelector(".basket-overlay")?.classList.remove("open");
    });
  });
</script>
