---

<Layout>
  <section>
    <img src={`/beer-card_images/${product.img}`} alt={product.title} />
    <article>
      <h4>{product.title}</h4>
      <h5>{product.title2}</h5>
      <h5>{product.type}</h5>
      <p>{product.description}</p>

      <h6>{product.discount_percentage}</h6>
      <p><strong>{product.ingredient}</strong></p>
      <p>{product.Old_price}</p>
      <p><em>{product.date}</em></p>
      <p>
        {product.category}, {product.category2}
      </p>
      <div>
        {
          product.soldout ? (
            <p class="price" style="color: red;">
              Sold out
            </p>
          ) : (
            <>
              <p class="price">{product.price},-</p>
              <button
                class="cta1 add-to-cart"
                data-product={JSON.stringify({
                  img: product.img,
                  title: product.title,
                  title2: product.title2,
                  price: product.price,
                  Old_price: product.Old_price,
                  discount_percentage: product.discount_percentage,
                  soldout: product.soldout,
                  category: product.category,
                  category2: product.category2,
                  type: product.type,
                  path: product.path,
                })}
              >
                Add to basket
              </button>
            </>
          )
        }
      </div>
    </article>
  </section>
</Layout>

<style>
  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    padding-block: 2rem;
  }

  article {
    display: grid;
    gap: 1.5rem;
    place-content: start;
    background-color: rgba(255, 251, 244, 1);
    padding: 3rem;
  }

  div {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: end;
  }

  .price {
    font-size: 2rem;
    font-weight: 600;
    opacity: 80%;
    text-align: right;
  }
</style>
