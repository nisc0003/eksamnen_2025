  article {
    display: grid;
    gap: 1.5rem;
    place-content: start;
    background-color: rgba(255, 251, 244, 1);
    padding: 3rem;
  }

  div {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: end;
  }

  .price {
    font-size: 2rem;
    font-weight: 600;
    opacity: 80%;
    text-align: right;
  }

  button {
    background-color: white;
    color: rgba(25, 25, 25, 1);
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    border: none;
    border-radius: 4px;
    padding: 1rem 5rem;
    text-transform: uppercase;
    font-weight: 600;
    z-index: 10;
    cursor: pointer;
    place-self: end;
    transition: 0.3s;
  }

  button:hover {
    background-color: rgba(25, 25, 25, 1);
    color: white;
    box-shadow: none;
  }
</style>
