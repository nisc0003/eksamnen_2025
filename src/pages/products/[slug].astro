<Layout>
  <section>
    <img src={`/beer-card_images/${product.img}`} alt={product.title} />
    <article>
      <h4>{product.title}</h4>
      <p>{product.description}</p>
      <p><strong>{product.ingredient}</strong></p>
      <p><em>{product.date}</em></p>
      <div>
        <p class="price">{product.price},-</p>
        <button>Add to basket</button>
      </div>
    </article>
